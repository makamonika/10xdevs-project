---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "SEO Query Insights Dashboard" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-background">
    <div class="min-h-screen flex items-center justify-center p-4">
      <div class="w-full max-w-md">
        <div class="mb-8 text-center">
          <h1 class="text-3xl font-bold text-foreground mb-2">SEO Query Insights</h1>
          <p class="text-sm text-muted-foreground">Dashboard</p>
        </div>

        <div class="rounded-lg border bg-card shadow-sm p-6">
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
  }
</style>
