---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import { SideNav } from "@/components/navigation/SideNav";

interface Props {
  title?: string;
}

const { title = "SEO Query Insights Dashboard" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex h-screen w-full overflow-hidden">
      <!-- Side Navigation -->
      <SideNav client:load />

      <!-- Main Content Area -->
      <main id="main-content" class="flex-1 overflow-auto bg-background pt-16 md:pt-0" role="main">
        <slot />
      </main>
    </div>
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
</style>
